{
  "manifest_version": 3,
  "name": "WhatsApp Message Extractor",
  "version": "1.0",
  "description": "A web extension to extract messages from WhatsApp Web.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}